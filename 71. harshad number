#include <iostream>
using namespace std;

int main() {
    int num, sum = 0, originalNum;
    cout << "Enter a positive integer: ";
    cin >> num;

    originalNum = num;
    while (originalNum != 0) {
        sum += originalNum % 10;
        originalNum /= 10;      
    }
    if (num % sum == 0) {
        cout << num << " is a Harshad number." << endl;
    } else {
        cout << num << " is not a Harshad number." << endl;
    }

    return 0;
}

#include <iostream>
using namespace std;

void decimalToOctal(int decimal) {
    int octal[100]; 
    int index = 0;
    while (decimal != 0) {
        octal[index] = decimal % 8; 
        decimal = decimal / 8;       
        index++;
    }
    cout << "Octal: ";
    for (int i = index - 1; i >= 0; i--) {
        cout << octal[i]; 
    }
    cout << endl;
}

int main() {
    int decimal;
    cout << "Enter a decimal number: ";
    cin >> decimal;
    if (decimal < 0) {
        cout << "Please enter a non-negative integer." << endl;
        return 1; 
    }
    decimalToOctal(decimal);

    return 0;
}

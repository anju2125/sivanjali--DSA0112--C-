#include <iostream>
using namespace std;

int main() {
    int n;
    double sum = 0.0;
    cout << "Enter the number of elements: ";
    cin >> n;

    double numbers[n];  
    cout << "Enter " << n << " numbers:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> numbers[i];
        sum += numbers[i]; 
    }
    double average = sum / n;
    cout << "The average of the " << n << " numbers is: " << average << endl;

    return 0;
}


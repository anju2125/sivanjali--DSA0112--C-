#include <iostream>
#include <iomanip> 
using namespace std;

int main() {
    int n;
    double sum = 0.0;
    cout << "Enter the value of n: ";
    cin >> n;
    if (n <= 0) {
        cout << "Please enter a positive integer greater than 0." << endl;
        return 1; 
    }
    for (int i = 1; i <= n; i++) {
        sum += 1.0 / i; 
    }
    cout << fixed << setprecision(5); 
    cout << "The sum of the series is: " << sum << endl;

    return 0;
}

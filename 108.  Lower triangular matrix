#include <iostream>
using namespace std;

int main() {
    int rows, cols;
    cout << "Enter the number of rows and columns (for a square matrix): ";
    cin >> rows;
    cols = rows;  

    int matrix[rows][cols];
    cout << "Enter the elements of the matrix:" << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cin >> matrix[i][j];
        }
    }
    cout << "The lower triangular matrix is: " << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            if (i >= j) {
                cout << matrix[i][j] << " "; 
            } else {
                cout << "0 "; 
            }
        }
        cout << endl;
    }

    return 0;
}

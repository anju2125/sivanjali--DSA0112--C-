#include <iostream>
#include <cmath>  
using namespace std;

int main() {
    int binary, decimal = 0, remainder, position = 0;
    cout << "Enter a binary number: ";
    cin >> binary;
    while (binary != 0) {
        remainder = binary % 10; 
        decimal += remainder * pow(2, position);  
        binary /= 10;  
        position++;  
    }
    cout << "Decimal equivalent: " << decimal << endl;

    return 0;
}

